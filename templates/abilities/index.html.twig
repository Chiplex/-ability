{% extends 'admin.html.twig' %}

{% block title %}Habilidades!{% endblock %}

{% block page_title %}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Habilidades</h1>
    <a href="{{ path("ability_create") }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
            class="fas fa-plus"></i> Añadir Habilidad</a>
</div>
{% endblock page_title %}

{% block content %}
<div class="card shadow">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>#</th>
                <th>Descripción</th>
                <th>Historia</th>
                <th>Acciones</th>
            </tr>
            {% for ability in abilities %}
            <tr>
                <td>{{ ability.id }}</td>
                <td>{{ ability.description }}</td>
                <td>{{ ability.history }}</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a href="{{ path("ability_show", { ability: ability.id }) }}" class="btn btn-info"><i
                                class="fas fa-eye"></i></a>
                        <a href="{{ path("ability_update", { ability: ability.id }) }}" class="btn btn-success"><i
                                class="fas fa-edit"></i></a>
                        <a href="{{ path("ability_delete", { ability: ability.id}) }}" class="btn btn-danger"><i
                                class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>

{% endblock %}