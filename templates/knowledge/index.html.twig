{% extends 'base.html.twig' %}

{% block title %}Hello KnowledgeController!{% endblock %}

{% block body %}

<table class="table table-striped table-dark">
    <tr>
        <th>#</th>
        <th>Mencion</th>
        <th>Usuario</th>
        <th><a href="{{ path("knowledge_create") }}" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i></a></th>
    </tr>
    {% for knowledge in knowledges %}
    <tr>
        <td>{{ knowledge.id }}</td>
        <td>{{ knowledge.mencion }}</td>
        <td>{{ knowledge.user.username }}</td>
        <td>
            <div class="btn-group btn-group-sm">
                <a href="{{ path("knowledge_show", { knowledge: knowledge.id }) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                <a href="{{ path("knowledge_update", { knowledge: knowledge.id }) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                <a href="{{ path("knowledge_delete", { knowledge: knowledge.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
            </div>
        </td>
    </tr>
    {% endfor %}
</table>

{% endblock %}
